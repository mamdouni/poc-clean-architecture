<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions
    xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL"
    xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
    xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
    xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
    id="Definitions_1"
    targetNamespace="http://bpmn.io/schema/bpmn">

  <bpmn:process id="UserDeactivationProcess" isExecutable="true">

    <!-- Start Event -->
    <bpmn:startEvent id="StartEvent_1" name="Start">
      <bpmn:outgoing>Flow_1</bpmn:outgoing>
    </bpmn:startEvent>

    <!-- Task: Vérifier que l'utilisateur existe -->
    <bpmn:userTask id="UserTask_1" name="Vérifier que l'utilisateur existe">
      <bpmn:incoming>Flow_1</bpmn:incoming>
      <bpmn:outgoing>Flow_2</bpmn:outgoing>
    </bpmn:userTask>

    <!-- Gateway: Utilisateur trouvé ? -->
    <bpmn:exclusiveGateway id="Gateway_1" name="Utilisateur trouvé ?" default="Flow_3">
      <bpmn:incoming>Flow_2</bpmn:incoming>
      <bpmn:outgoing>Flow_3</bpmn:outgoing>
      <bpmn:outgoing>Flow_4</bpmn:outgoing>
    </bpmn:exclusiveGateway>

    <!-- Task: Retourner une erreur utilisateur introuvable -->
    <bpmn:serviceTask id="ServiceTask_1" name="Retourner erreur utilisateur introuvable">
      <bpmn:incoming>Flow_3</bpmn:incoming>
      <bpmn:outgoing>Flow_5</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Task: Vérifier que l'utilisateur désactivant est un responsable hiérarchique -->
    <bpmn:userTask id="UserTask_2" name="Vérifier autorisation de désactivation">
      <bpmn:incoming>Flow_4</bpmn:incoming>
      <bpmn:outgoing>Flow_6</bpmn:outgoing>
    </bpmn:userTask>

    <!-- Gateway: Autorisation ? -->
    <bpmn:exclusiveGateway id="Gateway_2" name="Autorisation ?" default="Flow_7">
      <bpmn:incoming>Flow_6</bpmn:incoming>
      <bpmn:outgoing>Flow_7</bpmn:outgoing>
      <bpmn:outgoing>Flow_8</bpmn:outgoing>
    </bpmn:exclusiveGateway>

    <!-- Task: Retourner une erreur d’autorisation -->
    <bpmn:serviceTask id="ServiceTask_2" name="Retourner erreur d’autorisation">
      <bpmn:incoming>Flow_7</bpmn:incoming>
      <bpmn:outgoing>Flow_9</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Task: Récupérer les tâches non terminées -->
    <bpmn:serviceTask id="ServiceTask_3" name="Récupérer tâches non terminées">
      <bpmn:incoming>Flow_8</bpmn:incoming>
      <bpmn:outgoing>Flow_10</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Gateway: Supérieur disponible ? -->
    <bpmn:exclusiveGateway id="Gateway_3" name="Supérieur disponible ?" default="Flow_11">
      <bpmn:incoming>Flow_10</bpmn:incoming>
      <bpmn:outgoing>Flow_11</bpmn:outgoing>
      <bpmn:outgoing>Flow_12</bpmn:outgoing>
    </bpmn:exclusiveGateway>

    <!-- Task: Réaffecter les tâches au supérieur -->
    <bpmn:serviceTask id="ServiceTask_4" name="Réaffecter tâches au supérieur">
      <bpmn:incoming>Flow_11</bpmn:incoming>
      <bpmn:outgoing>Flow_13</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Task: Répartir les tâches entre collègues -->
    <bpmn:serviceTask id="ServiceTask_5" name="Répartir tâches entre collègues">
      <bpmn:incoming>Flow_12</bpmn:incoming>
      <bpmn:outgoing>Flow_13</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Task: Désactiver l'utilisateur -->
    <bpmn:serviceTask id="ServiceTask_6" name="Désactiver l'utilisateur">
      <bpmn:incoming>Flow_13</bpmn:incoming>
      <bpmn:outgoing>Flow_14</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Task: Notifier les utilisateurs concernés -->
    <bpmn:serviceTask id="ServiceTask_7" name="Notifier utilisateurs">
      <bpmn:incoming>Flow_14</bpmn:incoming>
      <bpmn:outgoing>Flow_15</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- End Event -->
    <bpmn:endEvent id="EndEvent_1" name="End">
      <bpmn:incoming>Flow_15</bpmn:incoming>
    </bpmn:endEvent>

    <!-- End Event for error handling -->
    <bpmn:endEvent id="EndEvent_2" name="Error">
      <bpmn:incoming>Flow_5</bpmn:incoming>
      <bpmn:incoming>Flow_9</bpmn:incoming>
    </bpmn:endEvent>

    <!-- Sequence Flows -->
    <bpmn:sequenceFlow id="Flow_1" sourceRef="StartEvent_1" targetRef="UserTask_1" />
    <bpmn:sequenceFlow id="Flow_2" sourceRef="UserTask_1" targetRef="Gateway_1" />
    <bpmn:sequenceFlow id="Flow_3" sourceRef="Gateway_1" targetRef="ServiceTask_1" />
    <bpmn:sequenceFlow id="Flow_4" sourceRef="Gateway_1" targetRef="UserTask_2" />
    <bpmn:sequenceFlow id="Flow_5" sourceRef="ServiceTask_1" targetRef="EndEvent_2" />
    <bpmn:sequenceFlow id="Flow_6" sourceRef="UserTask_2" targetRef="Gateway_2" />
    <bpmn:sequenceFlow id="Flow_7" sourceRef="Gateway_2" targetRef="ServiceTask_2" />
    <bpmn:sequenceFlow id="Flow_8" sourceRef="Gateway_2" targetRef="ServiceTask_3" />
    <bpmn:sequenceFlow id="Flow_9" sourceRef="ServiceTask_2" targetRef="EndEvent_2" />
    <bpmn:sequenceFlow id="Flow_10" sourceRef="ServiceTask_3" targetRef="Gateway_3" />
    <bpmn:sequenceFlow id="Flow_11" sourceRef="Gateway_3" targetRef="ServiceTask_4" />
    <bpmn:sequenceFlow id="Flow_12" sourceRef="Gateway_3" targetRef="ServiceTask_5" />
    <bpmn:sequenceFlow id="Flow_13" sourceRef="ServiceTask_4" targetRef="ServiceTask_6" />
    <bpmn:sequenceFlow id="Flow_13" sourceRef="ServiceTask_5" targetRef="ServiceTask_6" />
    <bpmn:sequenceFlow id="Flow_14" sourceRef="ServiceTask_6" targetRef="ServiceTask_7" />
    <bpmn:sequenceFlow id="Flow_15" sourceRef="ServiceTask_7" targetRef="EndEvent_1" />
  </bpmn:process>

  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="UserDeactivationProcess">
      <!-- Diagram elements would be defined here with positions, but for simplicity, we'll omit them. -->
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</bpmn:definitions>